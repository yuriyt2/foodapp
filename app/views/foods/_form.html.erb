
<%= form_for(@food, html: {multipart: true}) do |f| %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_area :name, class: "text_fields"%>
  </p>
  <p>
    <%= f.label :price %><br />
    <%= f.text_area :price, class: "text_fields" %>
  </p>
  <p>
    <%= f.label :location %><br />
    <%= f.text_area :location, class: "text_areas", :placeholder => "Enter restaurant name, address and cross streets." %>
  </p>


  <p>
      <% if @food.image.exists? %>
      <%= image_tag @food.image.url %><br/>
      <% end %>
    <%= f.label :image, "Attach an Image" %><br />
    <%= f.file_field :image %>

  <p>
    <%= f.submit %>
  </p>

  <% end %>
