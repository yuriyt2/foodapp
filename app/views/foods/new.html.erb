<p><h1>Make a new food!</h1></p>


<%= form_for(@food, html: {multipart: true}) do |f| %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :price %><br />
    <%= f.text_area :price %>
  </p>
  <p>
    <%= f.label :location %><br />
    <%= f.text_area :location %>
  </p>


  <p>
      <% if @food.image.exists? %>
      <%= image_tag @food.image.url %><br/>
      <% end %>
    <%= f.label :image, "Attach an Image" %><br />
    <%= f.file_field :image %>

  <p>
    <%= f.submit %>
  </p>

  <% end %>
