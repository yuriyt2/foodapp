<h1>Get This Lunch!</h1>
<h4>The Lunch Finding Assistant for the Flatiron District</h4>
<br>
<div>
<h4>User Login</h4>
<p>
  <%flash.each do |message_type, message| %>
     <div class="alert"-<%= message_type %>"><h4><%= message %></h4></div>
   <% end %>
<%= form_tag '/sessions', method: :post do %>
<%= label_tag :username%>
<%= text_field_tag :username%><br>
<%= label_tag :password %>
<%= password_field_tag :password%><br>

<%= submit_tag "Log in"%>
<% end %>
<%= button_to "New User", new_user_path, method: :get%>


</p>
</div>
